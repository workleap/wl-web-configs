{
    "name": "@workleap/rsbuild-configs",
    "author": "Workleap",
    "description": "Workleap recommended Rsbuild configurations.",
    "version": "3.0.2",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-web-configs.git",
        "directory": "packages/rsbuild-configs"
    },
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "rslib build -c rslib.config.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@rsbuild/core": "^1.4.7",
        "@rspack/core": "^1.4.8"
    },
    "dependencies": {
        "@rsbuild/plugin-basic-ssl": "^1.1.1",
        "@rsbuild/plugin-image-compress": "^1.2.0",
        "@rsbuild/plugin-react": "^1.3.4",
        "@rsbuild/plugin-svgr": "^1.2.1"
    },
    "devDependencies": {
        "@rsbuild/core": "1.4.7",
        "@rslib/core": "0.10.6",
        "@rspack/core": "1.4.8",
        "@types/node": "24.0.14",
        "@typescript-eslint/parser": "8.32.1",
        "@workleap/eslint-plugin": "workspace:*",
        "@workleap/rslib-configs": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "eslint": "8.57.0",
        "typescript": "5.8.3",
        "vitest": "3.1.4"
    }
}
