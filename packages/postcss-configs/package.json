{
    "name": "@workleap/postcss-configs",
    "author": "Workleap",
    "description": "Workleap's recommended PostCSS configurations",
    "version": "1.1.4",
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-web-configs.git",
        "directory": "packages/postcss-configs"
    },
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "src",
        "dist",
        "CHANGELOG.md"
    ],
    "scripts": {
        "build": "rslib build -c rslib.config.ts",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "postcss": "^8.5.6"
    },
    "dependencies": {
        "postcss-load-config": "^6.0.1",
        "postcss-preset-env": "^10.5.0"
    },
    "devDependencies": {
        "@eslint/js": "9.39.1",
        "@rslib/core": "0.18.4",
        "@types/node": "25.0.0",
        "@typescript-eslint/parser": "8.49.0",
        "@workleap/eslint-configs": "workspace:*",
        "@workleap/rslib-configs": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "eslint": "9.39.1",
        "typescript": "5.9.3",
        "typescript-eslint": "8.49.0",
        "vitest": "4.0.15"
    }
}
