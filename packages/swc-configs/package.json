{
    "name": "@workleap/swc-configs",
    "description": "Workleap recommended SWC configurations.",
    "version": "2.2.6",
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            }
        }
    },
    "types": "./dist/index.d.ts",
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-web-configs.git",
        "directory": "packages/swc-configs"
    },
    "scripts": {
        "build": "rslib build -c rslib.config.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@swc/core": "^1.10.0",
        "@swc/helpers": "^0.5.0",
        "@swc/jest": "^0.2.0",
        "browserslist": "^4.24.4"
    },
    "peerDependenciesMeta": {
        "@swc/jest": {
            "optional": true
        },
        "browserslist": {
            "optional": true
        }
    },
    "devDependencies": {
        "@rsbuild/core": "1.3.21",
        "@rslib/core": "0.8.0",
        "@typescript-eslint/parser": "8.32.1",
        "@workleap/eslint-plugin": "workspace:*",
        "@workleap/rslib-configs": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "eslint": "8.57.0",
        "typescript": "5.8.3",
        "vitest": "3.1.4"
    }
}
