{
    "name": "@workleap/webpack-configs",
    "author": "Workleap",
    "description": "Workleap recommended webpack configurations.",
    "version": "1.5.5",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-web-configs.git",
        "directory": "packages/webpack-configs"
    },
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "rslib build -c rslib.config.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@swc/core": "^1.10.0",
        "@swc/helpers": "^0.5.0",
        "browserslist": "^4.24.4",
        "postcss": ">=8.4.6",
        "webpack": ">=5.0.0",
        "webpack-dev-server": ">=5.0.0"
    },
    "peerDependenciesMeta": {
        "webpack-dev-server": {
            "optional": true
        }
    },
    "dependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
        "@svgr/webpack": "^8.1.0",
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.3",
        "mini-css-extract-plugin": "^2.9.2",
        "postcss-loader": "^8.1.1",
        "react-refresh": "^0.17.0",
        "style-loader": "^4.0.0",
        "swc-loader": "^0.2.6",
        "terser-webpack-plugin": "^5.3.14"
    },
    "devDependencies": {
        "@rsbuild/core": "1.3.21",
        "@rslib/core": "0.8.0",
        "@svgr/core": "8.1.0",
        "@types/node": "22.15.21",
        "@typescript-eslint/parser": "8.32.1",
        "@workleap/eslint-plugin": "workspace:*",
        "@workleap/rslib-configs": "workspace:*",
        "@workleap/swc-configs": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "eslint": "8.57.0",
        "typescript": "5.8.3",
        "vitest": "3.1.4"
    }
}
