        "eslint-plugin-testing-library": "^7.13.3",
        "eslint-plugin-yaml": "^1.1.3",
        "globals": "^16.4.0"
    },
    "devDependencies": {
        "@eslint/js": "9.38.0",
        "@rsbuild/core": "1.5.17",
        "@rslib/core": "0.16.0",
        "@types/eslint-plugin-jsx-a11y": "6.10.1",
        "@types/estree": "1.0.8",
        "@types/node": "24.9.1",
        "@workleap/typescript-configs": "workspace:*",
        "eslint": "9.38.0",
        "typescript": "5.9.3",
        "typescript-eslint": "8.46.2"
