{
    "name": "@webpack-sample/app",
    "author": "Workleap",
    "version": "0.0.0",
    "description": "Application to try the webpack configs.",
    "private": true,
    "license": "Apache-2.0",
    "type": "module",
    "scripts": {
        "postinstall": "pnpm msw init",
        "dev": "nodemon",
        "dev-msw": "cross-env USE_MSW=true pnpm dev",
        "dev-verbose": "cross-env VERBOSE=true pnpm dev",
        "dev-msw-verbose": "cross-env USE_MSW=true VERBOSE=true pnpm dev",
        "build": "webpack --config webpack.build.js",
        "serve-build": "pnpm build && pnpm http-server dist -p 8080 -P http://localhost:8080? -c-1",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "stylelint": "stylelint \"**/*.css\" --allow-empty-input --cache --cache-location node_modules/.cache/stylelint --max-warnings=0",
        "typecheck": "tsc",
        "test": "jest"
    },
    "dependencies": {
        "@webpack-sample/components": "workspace:*",
        "@webpack-sample/tsup-lib": "workspace:*",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "react-router": "7.12.0"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@swc/core": "1.15.10",
        "@swc/helpers": "0.5.18",
        "@swc/jest": "0.2.39",
        "@testing-library/react": "16.3.2",
        "@types/jest": "30.0.0",
        "@types/node": "25.0.9",
        "@types/react": "19.2.9",
        "@types/react-dom": "19.2.3",
        "@typescript-eslint/parser": "8.53.1",
        "@typescript/native-preview": "7.0.0-dev.20260122.3",
        "@workleap/browserslist-config": "workspace:*",
        "@workleap/eslint-configs": "workspace:*",
        "@workleap/postcss-configs": "workspace:*",
        "@workleap/stylelint-configs": "workspace:*",
        "@workleap/swc-configs": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "@workleap/webpack-configs": "workspace:*",
        "browserslist": "4.28.1",
        "cross-env": "10.1.0",
        "eslint": "9.39.2",
        "http-server": "14.1.1",
        "identity-obj-proxy": "3.0.0",
        "jest": "30.2.0",
        "jest-environment-jsdom": "30.2.0",
        "msw": "2.12.7",
        "nodemon": "3.1.11",
        "postcss": "8.5.6",
        "prettier": "3.8.1",
        "stylelint": "17.0.0",
        "ts-node": "10.9.2",
        "typescript": "5.5.4",
        "typescript-eslint": "8.53.1",
        "webpack": "5.104.1",
        "webpack-cli": "6.0.1",
        "webpack-dev-server": "5.2.3"
    },
    "msw": {
        "workerDirectory": "public"
    }
}
