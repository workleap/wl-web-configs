{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Vitest Test (Current File)",
        "runtimeExecutable": "pnpm",
        "args": [
          "run",
          "test",
          "--",
          "${file}"
        ],
        "cwd": "${fileDirname}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
