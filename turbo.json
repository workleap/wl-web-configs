{
    "$schema": "./node_modules/turbo/schema.json",
    "ui": "tui",
    "tasks": {
        "dev": {
            "dependsOn": ["^build"],
            "globalEnv": ["USE_MSW", "NETLIFY", "VERBOSE"],
            "cache": false,
            "persistent": true
        },
        "dev-msw": {
            "dependsOn": ["^build"],
            "globalEnv": ["USE_MSW", "NETLIFY", "VERBOSE"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "globalEnv": ["USE_MSW", "NETLIFY", "VERBOSE"],
            "outputs": ["dist/**", "storybook-static/**"]
        },
        "serve-build": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "deploy": {
            "dependsOn": ["build"],
            "cache": false
        },
        "lint": {
            "dependsOn": ["eslint", "//#eslint", "stylelint", "typecheck", "//#typecheck", "//#syncpack"]
        },
        "//#eslint": {
            "inputs": ["$TURBO_DEFAULT$", "!packages", "!samples", "!docs", "!README.md", "!CONTRIBUTING.md", "!**/*.css"],
            "outputs": ["node_modules/.cache/eslint"]
        },
        "eslint": {
            "inputs": ["$TURBO_DEFAULT$", "!README.md", "!src/**/*.css"],
            "outputs": ["node_modules/.cache/eslint"]
        },
        "stylelint": {
            "outputs": ["node_modules/.cache/stylelint"]
        },
        "//#typecheck": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "tsconfig.json", "!packages", "!samples", "!docs"],
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "typecheck": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "tsconfig.json", "tsconfig.build.json"],
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "//#syncpack": {
            "inputs": [".syncpackrc.js", "package.json", "packages/**/package.json", "samples/**/package.json"]
        },
        "@rsbuild-sample/app#test": {
            "dependsOn": ["@workleap/swc-configs#build", "@rsbuild-sample/rslib-lib#build"],
            "outputs": ["node_modules/.cache/vitest/**"]
        },
        "@webpack-sample/app#test": {
            "dependsOn": ["@workleap/swc-configs#build", "@webpack-sample/tsup-lib#build"],
            "outputs": ["node_modules/.cache/jest/**"]
        },
        "test": {
            "dependsOn": ["@workleap/swc-configs#build"],
            "outputs": ["node_modules/.cache/vitest/**", "node_modules/.cache/jest/**"]
        }
    }
}
